---
import SettingsPanel from "../components/SettingsPanel.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="mode-css bg-[#faf9f7] text-[#1a1a1a]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="max-w-[72ch] mx-auto px-6 py-12 font-mono text-[15px] leading-relaxed">
    <SettingsPanel />
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/demo.css";

  /* Font family override for JetBrains Mono */
  html {
    font-family: "JetBrains Mono", monospace;
  }
</style>

<script is:inline>
  // Restore code mode preference from localStorage
  const savedMode = localStorage.getItem("code-mode");
  if (savedMode === "tailwind") {
    document.documentElement.classList.remove("mode-css");
    document.documentElement.classList.add("mode-tailwind");
  }
</script>
