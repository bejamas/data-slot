---
import packageJson from "../../../../package.json";

// Get version from the main package.json
const version = "0.1.0"; // We'll use a fixed version for the docs
---

<div class="settings-panel" id="settings-panel">
  <div class="settings-header">
    <span class="settings-icon">⚙</span>
    <span class="settings-title">settings</span>
  </div>
  <div class="settings-body">
    <div class="settings-row">
      <span class="settings-label">examples mode:</span>
      <div class="settings-toggle">
        <button type="button" class="toggle-btn" data-mode="css" aria-pressed="true">
          css
        </button>
        <span class="toggle-sep">/</span>
        <button type="button" class="toggle-btn" data-mode="tailwind" aria-pressed="false">
          tailwind
        </button>
      </div>
    </div>
    <div class="settings-row">
      <span class="settings-label">ver:</span>
      <span class="settings-value">{version}</span>
    </div>
  </div>
  <div class="settings-footer">
    <a href="https://github.com/user/data-slot" class="settings-link">github</a>
    <span class="settings-sep">·</span>
    <a href="https://npmjs.com/org/data-slot" class="settings-link">npm</a>
  </div>
</div>

<style>
  .settings-panel {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 10;
    font-size: 0.8rem;
    background: var(--bg);
    border: 1px solid var(--border);
    min-width: 180px;
  }

  .settings-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.6rem;
    border-bottom: 1px dashed var(--border);
    background: var(--code-bg);
  }

  .settings-icon {
    opacity: 0.6;
  }

  .settings-title {
    color: var(--muted);
    text-transform: lowercase;
  }

  .settings-body {
    padding: 0.5rem 0.6rem;
  }

  .settings-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.25rem 0;
  }

  .settings-label {
    color: var(--muted);
    margin-right: 0.5rem;
  }

  .settings-label::before {
    content: "// ";
    color: var(--border);
  }

  .settings-value {
    color: var(--string);
  }

  .settings-toggle {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .toggle-btn {
    font-family: inherit;
    font-size: inherit;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--muted);
    padding: 0.15rem 0.35rem;
    transition: color 0.15s, background 0.15s;
    border-radius: 2px;
  }

  .toggle-btn:hover {
    color: var(--text);
  }

  .toggle-btn[aria-pressed="true"] {
    color: var(--bg);
    background: var(--text);
  }

  .toggle-sep {
    color: var(--border);
  }

  .settings-footer {
    padding: 0.4rem 0.6rem;
    border-top: 1px dashed var(--border);
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .settings-link {
    color: var(--muted);
    text-decoration: none;
    font-size: 0.75rem;
  }

  .settings-link:hover {
    color: var(--accent);
  }

  .settings-sep {
    color: var(--border);
    font-size: 0.75rem;
  }

  /* Responsive - hide on very small screens */
  @media (max-width: 600px) {
    .settings-panel {
      top: auto;
      bottom: 1rem;
      right: 1rem;
      left: 1rem;
      min-width: auto;
    }
  }
</style>

<script>
  function initSettingsPanel() {
    const buttons = document.querySelectorAll(".settings-panel .toggle-btn");

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const mode = btn.getAttribute("data-mode");

        // Update button states
        buttons.forEach((b) => {
          b.setAttribute("aria-pressed", b === btn ? "true" : "false");
        });

        // Update HTML class
        document.documentElement.classList.remove("mode-css", "mode-tailwind");
        document.documentElement.classList.add(`mode-${mode}`);

        // Persist preference
        localStorage.setItem("code-mode", mode);
      });
    });

    // Restore state on load
    const savedMode = localStorage.getItem("code-mode");
    if (savedMode) {
      const activeBtn = document.querySelector(
        `.settings-panel .toggle-btn[data-mode="${savedMode}"]`
      );
      if (activeBtn) {
        buttons.forEach((b) => {
          b.setAttribute("aria-pressed", b === activeBtn ? "true" : "false");
        });
      }
    }
  }

  initSettingsPanel();
</script>

