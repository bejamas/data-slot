        <div data-slot="slider-range" class="slider-range-css"></div>
      </div>
      <div data-slot="slider-thumb" class="slider-thumb-css"></div>
      <div data-slot="slider-thumb" class="slider-thumb-css"></div>
    </div>
  </div>

  <div slot="preview-tailwind" data-slot="slider" data-default-value="25,75" id="slider-range-tw" class="relative w-full py-2">
    <div class="relative flex items-center w-full h-5">
      <div data-slot="slider-track" class="relative flex-1 h-1 bg-gray-200 rounded">
        <div data-slot="slider-range" class="absolute h-full bg-gray-900 rounded"></div>
      </div>
      <div
        data-slot="slider-thumb"
        class="absolute w-5 h-5 bg-white border-2 border-gray-900 rounded-full cursor-grab -translate-x-1/2 focus:outline-none focus:ring-2 focus:ring-gray-900/20 data-[dragging]:cursor-grabbing"
      ></div>
      <div
        data-slot="slider-thumb"
        class="absolute w-5 h-5 bg-white border-2 border-gray-900 rounded-full cursor-grab -translate-x-1/2 focus:outline-none focus:ring-2 focus:ring-gray-900/20 data-[dragging]:cursor-grabbing"
      ></div>
    </div>
  </div>

  <Code slot="code-css" code={cssCodeRange} lang="html" theme="vitesse-light" />
  <Code slot="code-tailwind" code={tailwindCodeRange} lang="html" theme="vitesse-light" />
</ExampleBlock>

