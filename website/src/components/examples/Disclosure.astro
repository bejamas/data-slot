    <div class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-300 group-data-[state=open]:grid-rows-[1fr]">
      <div data-slot="disclosure-content" class="overflow-hidden min-h-0">
        <div class="p-4 mt-2 bg-code-bg">
