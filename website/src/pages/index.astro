  <Dialog />

  <!-- Disclosure -->
  <h3 class="text-base font-medium mt-8 mb-3 before:content-['###_'] before:text-[#ccc]">Disclosure</h3>
  <Disclosure />

  <!-- Tooltip -->
  <h3 class="text-base font-medium mt-8 mb-3 before:content-['###_'] before:text-[#ccc]">Tooltip</h3>
  <Tooltip />

